<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules configuration
   See https://developer.android.com/guide/topics/data/autobackup
   Note: This file is for devices API 31+
-->
<full-backup-content>
    <!-- Include user preferences -->
    <include domain="sharedpref" path="." />

    <!-- Exclude sensitive data -->
    <exclude domain="sharedpref" path="auth_preferences.xml" />
    <exclude domain="sharedpref" path="secure_preferences.xml" />

    <!-- Exclude database files (Room DB will be backed up separately if needed) -->
    <exclude domain="database" path="." />

    <!-- Include app files but exclude cache -->
    <include domain="file" path="." />
    <exclude domain="file" path="cache/" />
</full-backup-content>